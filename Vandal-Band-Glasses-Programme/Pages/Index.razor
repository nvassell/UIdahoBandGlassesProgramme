@page "/"
@inject HttpClient Http

@code {
    private DefaultLayoutModel settings = new DefaultLayoutModel();

    protected override async Task OnInitializedAsync()
    {
        //settings = await Http.GetJsonAsync<DefaultLayoutModel>("wwwroot/.vbgp/Settings.json");
        settings = await Http.GetFromJsonAsync<DefaultLayoutModel?>(".vbgp/Settings.json");
        await Http.PostJsonAsync(".vbgp/Settings.json", settings);
    }
}